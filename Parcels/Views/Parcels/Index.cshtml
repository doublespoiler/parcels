<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using Parcels.Models;

    <h1>Parcel List</h1> 

    @if (Model.Count == 0)
    {
      <p>There are no parcels in the list.</p>
    }
    <ul>
      @foreach (Parcel parcel in Model)
      {
        <li>@parcel.Name</li>
          <ul>
            <li>Volume: @parcel.Volume() ft<sup>3</sup></li>
            <li>Weight: @parcel.Weight lbs</li>
            <li>Shipping Cost: $@parcel.CostToShip()</li>
          </ul>
      }
    </ul>
    <a href="/parcels/new">Add a new parcel to the list.</a><br>
    <a href="/">Go Home, Fry</a>
  </body>
</html>